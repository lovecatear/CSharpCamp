                        </div>
                        <div class="col-md-6 mb-3">
                            <a class="btn btn-success bi bi-plus" style="float:right;font-size:35px;" href="/Recipe/Create"> 新增</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @{
                        foreach (var item in Model)
                        {
                            <div class="col-12 col-md-4 p-5 mt-3">
