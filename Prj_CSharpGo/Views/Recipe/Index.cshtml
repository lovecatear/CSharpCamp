                                    }
                                    else
                                    {<img src="~/Didi/img/@item.Img"
                                          class="rounded-circle img-fluid border img_1">}
                                </div>
                                <div style="margin-left:20px">
                                    <h5 class="text-center mt-3 mb-3 re_font">@item.RecipeName</h5>
                                </div>
                                <div style="margin-left:20px">
                                    <p class="text-center "><a class="btn btn-success re_font" href="/Recipe/Detail/@item.RecipeId">Read more</a></p>
