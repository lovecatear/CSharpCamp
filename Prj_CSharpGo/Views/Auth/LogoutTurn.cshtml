@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor user

@{
    ViewData["Title"] = "成功登出";

    string userToastr = user.HttpContext.Session.GetString("userToastr") ?? "Guest";
}


<!DOCTYPE html>
<html lang="zh-tw">

<head>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

    <link rel="stylesheet" href="~/css/LoginRegister.css">
    <link rel="stylesheet" href="~/css/sb-admin-2.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

    <style>

        body {
            margin: 0;
            padding: 0;
            width: 100%;
        }

        .container-fluid {
            width: 100%;
        }

        .row {
            width: 100%;
            padding-top: 2vh;
        }

        h1 {
            text-align: center;
        }

        .img-fluid {
            max-width: 30%;
            align-items: center;
            justify-content: center;
        }
    </style>

</head>


<body>

    <div class="container-fluid">
        <div class="row">
            <form action="/Home/Index" method="get">

                <h1 class="align-item-center justify-content-start">您已成功登出，期待您下次的造訪</h1>
                <br />
                <a href="/Home/Index" class="" rel="回首頁">
                    <img src="~/img/Logout_Reverse.png" class="rounded mx-auto d-block img-fluid align-item-center justify-content-start" />
                </a>

                <div class="form-group row d-flex justify-content-center">
                    <div class="col-8">
                        <div class="form-group">
                            @*<button type="submit" class="btn btn-block btn-outline-primary">回首頁</button>*@
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>




    <!-- Script Start -->
    @if (userToastr == "已成功登出")
    {
        <script type="text/javascript">

        $(function () {

        Command: toastr["success"]("@userToastr");
        @{user.HttpContext.Session.Remove("userToastr");}

        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    })
        </script>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/toastr.min.js"></script>
    <!-- Script End -->

</body>
</html>