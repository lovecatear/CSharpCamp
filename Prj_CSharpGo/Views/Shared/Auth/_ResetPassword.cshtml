@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/LoginRegister.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-icons.css" rel="stylesheet">
</head>

<body>

    <div class="container-fluid paddingTop50 align-content-center justify-content-center" style="margin-top:10vh;">
        <div class="row">

            <div class="col-md-6 offset-md-3">
                <div class="card login-logout-tab">
                    <div class="card-header d-flex mb-3" style="text-align: center; align-content: center; justify-content: center;">
                        <h1 style=" font-size: 3rem;">
                            密碼重置
                        </h1>
                    </div>
                    <div class="card-content">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>



    @section Scripts{
        @RenderSection("Scripts", required: false)
        <script>
            $(function () {
                var current = location.pathname;
                $('.nav-tabs li a').each(function () {
                    var $this = $(this);
                    if (current.indexOf($this.attr('href')) !== -1) {
                        $this.addClass('active');
                    }
                })
            })
        </script>
    }


</body>
</html>